<Window x:Class="Connect4.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Connect4"
        mc:Ignorable="d"
        Title="Settings" Height="800" Width="500">
    <Grid>
        <TextBlock FontSize="30" Margin="72,58,251.6,672.4">StartTime</TextBlock>
        <TextBox Name="StartTimeText" Margin="328,58,95.6,672.4">30</TextBox>

        <TextBlock FontSize="30" Margin="72,129,251.6,601.4">AddTime</TextBlock>
        <TextBox Name="AddTimeText" Margin="328,129,95.6,601.4">5</TextBox>

        <TextBlock FontSize="30" Margin="72,241,251.6,476.4">Björn mode</TextBlock>
        <ComboBox Name="BjörnText" IsEditable="True" Margin="328,241,95.6,489.4">No</ComboBox>

        <TextBlock FontSize="30" Margin="72,408,251.6,309.4">BotStart</TextBlock>
        <ComboBox Name="BotStartText" IsEditable="True" Margin="328,408,95.6,322.4">No</ComboBox>

        <TextBlock FontSize="30" Margin="72,350,251.6,367.4">BotActive</TextBlock>
        <ComboBox Name="BotActiveText" IsEditable="True" Margin="328,350,95.6,380.4">No</ComboBox>

        <Button FontSize="50" Name="StartGame" Click="ReturnToManu" Canvas.Left="142" Canvas.Top="84" Margin="171,643,164.6,48.4">Start</Button>
       
    </Grid>
</Window>
