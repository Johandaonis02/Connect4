<Window x:Class="Connect4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Connect4"
        mc:Ignorable="d"
        Title="Connect4" Height="800" Width="1000" KeyDown="HandleKeyDown">

    <Canvas Name="Connect4" MouseLeftButtonDown="PlacePiece" Background="White">
        <Label FontSize="24" Name="Time1" Content="Player 1 time left: 0" FontWeight="ExtraBlack" Canvas.Left="10" Canvas.Top="10" />
        <Label FontSize="24" Name="Time2" Content="Player 2 time left: 0" FontWeight="ExtraBlack" Canvas.Right="10" Canvas.Top="10" />
        <Label FontSize="50" Name="WinText" Content="" FontWeight="ExtraBlack" Canvas.Left="340" Canvas.Top="10"/>
    </Canvas>
</Window>
