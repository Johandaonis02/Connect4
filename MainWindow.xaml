<Window x:Class="Connect4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Connect4"
        mc:Ignorable="d"
        Title="Connect4" Height="400" Width="400">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button FontSize="40" Name="Start" Click="GoToGame" Grid.Row="0" Margin="100,100,100,10">Start</Button>
        <Button FontSize="40" Name="Settings" Click="GoToSettings" Grid.Row="1" HorizontalAlignment="Center" Margin="50,10,50,100">Custom game</Button>
    </Grid>


</Window>
    
    
